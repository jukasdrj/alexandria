{
  "name": "alexandria-worker",
  "version": "2.1.0",
  "description": "Cloudflare Worker for Alexandria OpenLibrary database with TypeScript types, Zod validation, and intelligent search",
  "main": "index.ts",
  "types": "types.ts",
  "exports": {
    ".": {
      "types": "./types.ts",
      "default": "./index.ts"
    },
    "./types": {
      "types": "./types.ts",
      "default": "./types.ts"
    }
  },
  "files": [
    "index.ts",
    "types.ts",
    "env.d.ts",
    "*.js",
    "*.d.ts",
    "README-INTEGRATION.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jukasdrj/alexandria.git",
    "directory": "worker"
  },
  "bugs": {
    "url": "https://github.com/jukasdrj/alexandria/issues"
  },
  "homepage": "https://alexandria.ooheynerds.com",
  "scripts": {
    "deploy": "npx wrangler@latest deploy",
    "dev": "npx wrangler@latest dev",
    "tail": "npx wrangler@latest tail",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "echo 'Publishing alexandria-worker v2.1.0 - Combined search & pagination support'"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "openlibrary",
    "database",
    "typescript",
    "zod",
    "validation",
    "api",
    "books",
    "isbn"
  ],
  "author": "juju <nerd@ooheynerds.com>",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251202.0",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14",
    "vitest-mock-extended": "^3.1.0",
    "wrangler": "^4.53.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "hono": "^4.10.7",
    "postgres": "^3.4.7",
    "zod": "^4.1.13"
  }
}
